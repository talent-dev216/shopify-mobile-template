{
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "start:web": "expo start --web --host localhost",
    "storybook": "expo start --config storybook.json",
    "eject": "expo eject",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:generated": "prettier --write \"src/generated/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint": "eslint --max-warnings 0 \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit -p .",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest",
    "test-full": "yarn apollo:generate && yarn test",
    "apollo:generate" : "yarn apollo:schema-download && yarn apollo:typegen-server && yarn format:generated",
    "apollo:schema-download" : "apollo schema:download src/graphql/schema.json --endpoint=https://ouioui-acc.myshopify.com/api/graphql --header='X-Shopify-Storefront-Access-Token: fdfae894a8747ee7ddcfbebdcf1d721a'",
    "apollo:typegen-server": "apollo codegen:generate --localSchemaFile src/graphql/schema.json --target typescript --tagName gql --outputFlat src/generated"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@react-native-community/masked-view": "^0.1.5",
    "@react-navigation/bottom-tabs": "^5.0.0-alpha.32",
    "@react-navigation/native": "^5.0.0-alpha.24",
    "@react-navigation/stack": "^5.0.0-alpha.56",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-cache-persist": "^0.1.1",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.13",
    "apollo-link-context": "^1.0.19",
    "apollo-link-http": "^1.5.16",
    "exoflex": "^3.0.1",
    "expo": "^36.0.2",
    "expo-image-picker": "^8.0.2",
    "expo-localization": "^8.0.0",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-36.0.0.tar.gz",
    "react-native-gesture-handler": "^1.5.3",
    "react-native-paper": "^3.4.0",
    "react-native-reanimated": "^1.4.0",
    "react-native-safe-area-context": "0.6.0",
    "react-native-screens": "2.0.0-alpha.12",
    "react-native-snap-carousel": "^3.8.4",
    "react-native-step-indicator": "^0.0.11",
    "react-native-svg": "9.13.3",
    "react-native-tab-view": "^2.11.0",
    "react-native-web": "~0.11.7"
  },
  "devDependencies": {
    "@storybook/react-native": "^5.3.0",
    "@types/jest": "^24.0.23",
    "@types/react": "~16.9.0",
    "@types/react-native": "~0.60.23",
    "@types/react-native-snap-carousel": "^3.7.4",
    "@types/react-test-renderer": "^16.9.1",
    "apollo": "^2.21.3",
    "babel-preset-expo": "~8.0.0",
    "eslint": "^6.8.0",
    "eslint-config-kodefox": "^0.1.0",
    "jest": "^24.9.0",
    "jest-expo": "^36.0.1",
    "prettier": "^1.19.1",
    "react-native-testing-library": "^1.11.1",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  },
  "eslintConfig": {
    "extends": "kodefox/react-native",
    "rules": {
      "@typescript-eslint/camelcase": [
        "error",
        {
          "properties": "never"
        }
      ]
    }
  },
  "eslintIgnore": ["src/generated/*.ts", "src/generated/server/*.ts"],
  "jest": {
    "preset": "jest-expo",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/src/__mocks__/setup.js"
    ],
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "ios.ts",
      "ios.tsx",
      "android.ts",
      "android.tsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react",
          "esModuleInterop": true
        }
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "private": true
}
